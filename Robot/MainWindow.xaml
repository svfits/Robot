<Window x:Class="Robot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Robot"
        mc:Ignorable="d"
        Loaded="Window_Loaded" Closing="Window_Closing" 
        Height="1000" Width="1000"   WindowState="Maximized">
  
    <!--WindowStyle="None"-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>            
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="10,10,10,10" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>                
                <RowDefinition Height="*"></RowDefinition> 
                <RowDefinition Height="0.3*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBox x:Name="commandTXB" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Black"
                     Grid.Row="0" TextWrapping="NoWrap"  Foreground="White" Text="#">
            </TextBox>
            <TextBox x:Name="commandEnterTXB" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                     Background="Black" Grid.Row="1" TextWrapping="Wrap"
                     Foreground="LightGreen" Text="#"/>
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="20,10,10,10">
            <Separator  />
        </StackPanel>

        <GroupBox Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,10,10">
            <Grid Grid.Column="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>                 
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>

                <GroupBox  Grid.Row="0" Grid.Column="0" Margin="10,10,10,10">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <Button x:Name="connectBtn" Content="CONNECT" Click="Button_Connect_Click" Margin="10,10,10,10"
                            FontSize="20" Padding="10" IsEnabled="False"  />
                    <Label Content="DISCONNECT" Margin="10,10,10,10" Foreground="Red" VerticalAlignment="Stretch"
                          FontSize="25"  HorizontalAlignment="Stretch"/>
                        <Button x:Name="connectToUSB" Content="connect to USB" Click="connectToUSB_Click" FontSize="10" Padding="10"
                                Margin="5,5,5,5"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Row="1" Grid.Column="0" Margin="10,10,10,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <GroupBox Margin="5,5,5,5" Grid.RowSpan="5" Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                            <Image x:Name="robotImage"  Source="u36.png" />
                        </GroupBox>

                        <GroupBox Grid.ColumnSpan="2" Grid.RowSpan="5" Margin="5,5,5,5" Grid.Column="1">
                            <Grid>                                
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>                                       
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <TabControl Grid.Column="0" Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
                                <TabItem Header="Communication">
                                        <TextBox x:Name="CommunicationTXB" Background="Black" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                                </TabItem>
                            </TabControl>
                            <TabControl Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <TabItem Header="Neuro" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                        <TextBox x:Name="NeuroTXB" Background="Black" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                                    </TabItem>
                            </TabControl>
                            <TabControl Grid.Column="0" Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <TabItem Header="Modules" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                        <TextBox x:Name="ModulesTXB" Background="Black"/>
                                </TabItem>
                            </TabControl>
                            <TabControl Grid.Column="1" Grid.Row="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <TabItem Header="System" HorizontalAlignment="Center">
                                    <TextBox x:Name="SystemTXB" Background="Black" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                                </TabItem>
                            </TabControl>
                            <TabControl Grid.Column="0" Grid.Row="4" MinHeight="150" MinWidth="150" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <TabItem Header="Servo" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <TextBox x:Name="ServoTXB" Background="Black" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                                </TabItem>
                            </TabControl>
                            </Grid>
                        </GroupBox>
                                             
                    </Grid>                   
                </GroupBox>

                <GroupBox Grid.Row="2" Grid.ColumnSpan="3" Margin="10,10,10,10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBox x:Name="logTXB" Margin="5,5,5,5" MinHeight="70" Grid.Row="0" Background="Black"></TextBox>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*" MinWidth="150"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                <Label Content="Link" />
                                <Label x:Name="statusConnectionLbl" Content="Disconnect"  />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <Label Content="Mode" Grid.Row="0" Grid.Column="2"/>
                                <Label x:Name="modeLbl" Content="OFF" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Grid.Column="2">
                                <Label Content="Battery:"  />
                                <Label x:Name="statusBataryLbl" Content="OFF" />
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Grid.Column="3">
                                <Label Content="Software:" />
                                <Label x:Name="versionProgrammLbl" Content="N/A" />
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Grid.Column="4">
                                <Label Content="Date: "  />
                                <Label x:Name="dateTimeLbl" Content="OFF" />
                            </StackPanel>

                        </Grid>
                    </Grid>
                </GroupBox>
                
                <!--<Grid Grid.Row="2" Grid.ColumnSpan="3" Margin="10,10,10,10">
                   <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>                    
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Row="0" Grid.ColumnSpan="5">
                        <TextBox ></TextBox>
                    </GroupBox>

                  
                  
                        --><!--<StackPanel Orientation="Horizontal">

                            <Label Content="Link" />
                            <Label x:Name="statusConnectionLbl" Content="Disconnect"  />

                        </StackPanel>
                        <Label Content="Mode" Grid.Row="0" Grid.Column="2"/>
                        <Label x:Name="statusConnectionUsbLbl" Content="OFF" />

                        <Label Content="Статус режима робота:" />
                        <Label x:Name="statusRegimeRobotaLbl" Content="N/A" />
                
                        <Label Content="Статус заряда батареи:"  />
                        <Label x:Name="statusBataryLbl" Content="OFF" />

                        <Label Content="Версия программного обеспечения:" />
                        <Label x:Name="versionProgrammLbl" Content="N/A" />
                
                        <Label Content="Текущая дата и время"  />
                        <Label x:Name="dateTimeLbl" Content="OFF" />--><!--
                  
                </Grid>-->

            </Grid>
          

        </GroupBox>
   

           
                
            
      
    </Grid>
</Window>
